<div class="container-fluid text-center">
  <h1><%= @client.identifier.capitalize %> Statistics</h1>
  <br>

  <div class="" id="statistics">

    <div class="btn-group btn-group-justified" role="group">
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">
          <h1><%= @client.payload_requests.average_response_time %></h1>
          <small>Average Response Time</small>
        </button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">
          <h1><%= @client.payload_requests.max_response_time %></h1>
          <small>Maximum Response Time</small>
        </button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">
          <h1><%= @client.payload_requests.min_response_time %></h1>
          <small>Minimum Response Time</small>
        </button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">
          <h1><%= @client.most_frequent_request_type %></h1>
          <small>Most Frequent Request Type</small>
        </button>
      </div>
    </div>

    <div class="btn-group btn-group-justified">
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">
          <% @client.all_http_verbs.each do |rt| %>
          <h1><%= "#{rt}" %></h1>
          <% end %>
          <small>All HTTP Verbs</small>
        </button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">
          <% @client.most_requested_urls.each do |url| %>
            <%= erb :'/shared/_requests_by_url', :locals => {:url => url} %>
          <% end %>
          <small>All URLs By Rank</small>
        </button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">
          <% @client.browsers.each do |ua| %>
          <h1><%= "#{ua}" %></h1>
          <small>Web Browser Breakdown</small>
          <% end %>
        </button>
      </div>
    </div>

    <div class="btn-group btn-group-justified">
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">
          <% @client.operating_systems.each do |os| %>
          <h3><%= "#{os}" %></h3>
          <% end %>
          <small>Operating System Breakdown</small>
        </button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">
          <% @client.dimensions.each do |res| %>
          <h3><%= "#{res}" %></h3>
           <% end %>
          <small>Screen Resolution Breakdown</small>
        </button>
      </div>
    </div>

  </div>

</div>
