<div class="container-fluid text-center"><h1>Statistics for <br><%= @url.root_url + @url.path %></h1>
<br>
  <div id="statistics">

    <div class="btn-group btn-group-justified">
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">
        <h1><%= @url.payload_requests.average_response_time %></h1>
        <small>Average Response Time</small>
        </button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">
          <h1><%= @url.payload_requests.max_response_time %></h1>
          <small>Maximum Response Time</small>
        </button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">
          <h1><%= @url.payload_requests.min_response_time %></h1>
          <small>Minimum Response Time</small>
        </button>
      </div>
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-default">
          <% @url.http_verbs.each do |verb| %>
          <h1><%= "#{verb}" %></h1>
          <% end %>
          <small>All HTTP Verbs</small>
        </button>
      </div>
    </div>

    <div class="btn btn-default btn-block">
      <h4><% @url.payload_requests.ordered_response_times.each do |rt| %>
        <%= "#{rt} " %>
        <% end %></h4>
      <small>Response Times from Longest to Shortest</small>
    </div>

    <div class="btn btn-default btn-block">
      <% @url.top_three_referrers.each do |referrer| %>
        <h3><%= "#{referrer}\n" %></h3>
      <% end %>
      <small>Top Three Referrers</small>
    </div>

    <div class="btn btn-default btn-block">
      <% @url.top_three_user_agents.each do |ua| %>
        <h3><%= "#{ua}\n" %></h3>
      <% end %>
      <small>Top Three User Agents</small>
    </div>

  </div>
</div>
